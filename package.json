{
  "name": "academico-ai",
  "version": "1.0.0",
  "description": "This is a template for Spark! DS 519 projects. It has pre-configured eslint.config.mjs - ([`ESLint`](https://eslint.org/)) and .prettierrc - ([`Prettier`](https://prettier.io/)) to reflect industry standard development guidelines.",
  "main": "index.js",
  "scripts": {
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "cd frontend && npm run build",
    "build:functions": "cd backend/functions && npm run build",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "serve": "firebase emulators:start",
    "dev": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "dev:reset": "firebase emulators:start --import=./emulator-data --export-on-exit --wipe-on-start",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "npm run test:unit:frontend && npm run test:unit:backend",
    "test:unit:frontend": "cd frontend && npm test",
    "test:unit:backend": "cd backend && npm test",
    "test:integration": "jest --config=test-configs/jest.integration.config.js",
    "test:e2e": "playwright test --config=test-configs/playwright.config.ts",
    "test:e2e:ui": "playwright test --config=test-configs/playwright.config.ts --ui",
    "test:e2e:headed": "playwright test --config=test-configs/playwright.config.ts --headed",
    "test:performance": "lighthouse-ci autorun",
    "test:accessibility": "jest --config=test-configs/jest.a11y.config.js",
    "test:security": "npm audit && snyk test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e:headless",
    "test:watch": "jest --watch --config=test-configs/jest.config.js",
    "test:coverage": "jest --coverage --config=test-configs/jest.config.js",
    "playwright:install": "playwright install"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.13.0",
    "@playwright/test": "^1.53.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@types/node": "^24.0.3",
    "jest": "^29.7.0",
    "snyk": "^1.1000.0"
  }
}
