{
  "name": "academico-ai",
  "version": "1.0.0",
  "description": "This is a template for Spark! DS 519 projects. It has pre-configured eslint.config.mjs - ([`ESLint`](https://eslint.org/)) and .prettierrc - ([`Prettier`](https://prettier.io/)) to reflect industry standard development guidelines.",
  "main": "index.js",
  "scripts": {
    "lint": "npm run lint:frontend && npm run lint:backend",
    "lint:frontend": "cd frontend && npm run lint",
    "lint:backend": "cd backend/functions && npm run lint",
    "lint:fix": "npm run lint:fix:frontend && npm run lint:fix:backend",
    "lint:fix:frontend": "cd frontend && npm run lint:fix",
    "lint:fix:backend": "cd backend/functions && npm run lint:fix",
    "build": "npm run build:frontend && npm run build:functions",
    "build:frontend": "cd frontend && npm run build",
    "build:functions": "cd backend/functions && npm run build",
    "validate": "./scripts/validate.sh",
    "pre-ci": "npm run validate",
    "deploy": "firebase deploy",
    "deploy:hosting": "firebase deploy --only hosting",
    "deploy:functions": "firebase deploy --only functions",
    "serve": "firebase emulators:start",
    "dev": "firebase emulators:start --import=./emulator-data --export-on-exit",
    "dev:reset": "firebase emulators:start --import=./emulator-data --export-on-exit --wipe-on-start",
    "dev:local": "cd backend/functions && npx ts-node src/local-server.ts",
    "test": "npm run test:unit && npm run test:integration && npm run test:e2e",
    "test:unit": "jest --config=tests/config/jest.config.frontend.js && jest --config=tests/config/jest.config.backend.js",
    "test:unit:frontend": "jest --config=tests/config/jest.config.frontend.js",
    "test:unit:backend": "jest --config=tests/config/jest.config.backend.js",
    "test:integration": "jest --config=tests/config/jest.config.frontend.js",
    "test:e2e": "npx playwright test --config=tests/config/playwright.config.ts",
    "test:e2e:ui": "npx playwright test --config=tests/config/playwright.config.ts --ui",
    "test:e2e:headed": "npx playwright test --config=tests/config/playwright.config.ts --headed",
    "test:performance": "lighthouse-ci autorun",
    "test:accessibility": "jest --config=tests/config/jest.config.frontend.js",
    "test:security": "npm audit && snyk test",
    "test:all": "npm run test:unit && npm run test:integration && npm run test:e2e && npm run test:performance",
    "test:ci": "npm run test:unit && npm run test:integration && npm run test:e2e:headed",
    "test:watch": "jest --watch --config=tests/config/jest.config.frontend.js",
    "test:coverage": "jest --coverage --config=tests/config/jest.config.frontend.js",
    "playwright:install": "npx playwright install",
    "test:auth:real": "PLAYWRIGHT_TEST=true npm run test:e2e -- tests/e2e/auth/auth-real-firebase.test.ts",
    "test:auth:local": "source tests/.env.test && npm run test:auth:real"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "typescript": "^5.8.3"
  },
  "devDependencies": {
    "@axe-core/playwright": "^4.8.2",
    "@lhci/cli": "^0.15.1",
    "@testing-library/jest-dom": "^6.1.4",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.0.3",
    "@types/testing-library__user-event": "^4.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^30.0.5",
    "snyk": "^1.1000.0",
    "ts-jest": "^29.4.0",
    "wait-on": "^8.0.3"
  }
}
