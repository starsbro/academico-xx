{
  "compilerOptions": {
    "module": "NodeNext",
    "esModuleInterop": true,
    "moduleResolution": "nodenext",
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2017",
    "types": ["node", "./src/types/modules", "./src/types/express/index"],
    "skipLibCheck": true
  },
  "compileOnSave": true,
  "include": [
    "src",
    "src/index.ts",
    "pdfjs-dist-legacy.d.ts",
    "src/types"
  ],
  "typeRoots": [
    "./node_modules/@types",
    "./src/types"
  ]
}
